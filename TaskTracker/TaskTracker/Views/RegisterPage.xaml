<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskTracker.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout Padding="5,50" Spacing="20">
            <StackLayout Spacing="10">
                <Entry Text="{Binding Login}" Placeholder="Login" Keyboard="Text" TextColor="Black" HeightRequest="50"></Entry>
                <Entry Text="{Binding Mail}" Placeholder="Mail" Keyboard="Email" TextColor="Black" HeightRequest="50"></Entry>
                <Entry Text="{Binding PasswordOne}" Placeholder="Hasło" IsPassword="True" TextColor="Black" HeightRequest="50"></Entry>
                <Entry Text="{Binding PasswordTwo}" Placeholder="Powtórz hasło" IsPassword="True" TextColor="Black" HeightRequest="50"></Entry>
            </StackLayout>

            <Button Command="{Binding RegisterCommand}" Text="Zarejestruj"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>